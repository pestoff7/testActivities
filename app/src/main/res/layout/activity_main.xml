<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/firstQuestText"
            android:textSize="22sp"/>
    </LinearLayout>
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/radioBut1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rightAnswerFirstQuest"
            android:textSize="22sp"
            android:onClick="onClick">
        </RadioButton>
        <RadioButton
            android:id="@+id/radioBut2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wrongAnswerFirstQuest"
            android:textSize="22sp">
        </RadioButton>
        <RadioButton
            android:id="@+id/radioBut3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wrongAnswer2FirstQuest"
            android:textSize="22sp">
        </RadioButton>
    </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/forwardButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="@string/forward"
            android:onClick="forwardClick">
        </Button>
        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back">
        </Button>
    </LinearLayout>

</LinearLayout>